# Copy to .env and fill values for local development (DO NOT COMMIT .env)

# MongoDB connection string (example for docker-compose local)
MONGO_URI=mongodb://mongo:27017/cancer-risk

# PostgreSQL for RAG/Retriever service
DB_HOST=postgres
DB_NAME=rag_db
DB_USER=postgres
DB_PASSWORD=yourpassword

# Backend port
PORT=5001

# JWT secret for token generation (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Python Microservices URLs
LLM_SERVICE_URL=http://llm-service:8000
OCR_SERVICE_URL=http://ocr-service:8001
RETRIEVER_SERVICE_URL=http://retriever-service:9000

# LLM Service Config
BIOBERT_MODEL=dmis-lab/biobert-base-cased-v1.1-squad
LLM_PORT=8000

# OCR Service Config
OCR_PORT=8001
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=tinyllama

# Retriever Service Config
RETRIEVER_PORT=9000
BIOBERT_API=http://llm-service:8000/ask
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBED_DIM=384

# Frontend build-time API URL (used during Docker build)
REACT_APP_API_URL=http://localhost:5001/api
