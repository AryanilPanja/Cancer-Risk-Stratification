# .env.example
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real credentials to git!

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/cancer_risk_db?retryWrites=true&w=majority

PORT=5001
JWT_SECRET=your_secret_key_here

OCR_PORT=7000
LLM_PORT=8000
RETRIEVER_PORT=9000

# PostgreSQL Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=chunks_db
DB_USER=postgres
DB_PASSWORD=yourpassword

# Docker Service URLs (used when running in Docker)
OCR_API=http://ocr:7000/ocr
RETRIEVER_API=http://retriever:9000/analyze
BIOBERT_API=http://llm:8000/ask

# Local URLs (used when running locally)
# OCR_API=http://127.0.0.1:7000/ocr
# RETRIEVER_API=http://127.0.0.1:9000/analyze
# BIOBERT_API=http://127.0.0.1:8000/ask

EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBED_DIM=384
FORWARD_TO_RETRIEVER=true
